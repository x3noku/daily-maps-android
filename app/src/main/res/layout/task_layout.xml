<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/task_checkbox"
        android:layout_width="@dimen/task_list_checkbox_size"
        android:layout_height="@dimen/task_list_checkbox_size"
        android:layout_marginEnd="@dimen/task_list_elements_padding"
        android:gravity="center" />

    <TextView
        android:id="@+id/task_text_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/task_list_elements_padding"
        android:layout_marginEnd="@dimen/task_list_elements_padding"
        android:layout_weight="1"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/task_list_primary_text_size" />

    <TextView
        android:id="@+id/task_text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/task_list_elements_padding"
        android:layout_marginEnd="@dimen/task_list_elements_padding"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="#A3A3A3"
        android:textSize="@dimen/task_list_secondary_text_size" />

    <ImageButton
        android:id="@+id/task_image_button"
        android:layout_width="@dimen/task_list_checkbox_size"
        android:layout_height="@dimen/task_list_checkbox_size"
        android:layout_marginStart="@dimen/task_list_elements_padding"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_more_vert_grey_24dp" />

</LinearLayout>